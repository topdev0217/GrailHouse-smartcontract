{
  "name": "hardhat-project",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.6.0",
    "chai": "^4.3.6",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.6.1",
    "hardhat": "^2.9.1"
  },
  "scripts": {
    "compile": "npx hardhat compile",
    "deploy:polygon": "npx hardhat run scripts/deploy.js --network polygon",
    "deploy:ropsten": "npx hardhat run scripts/deploy.js --network ropsten",
    "deploy:mumbai": "npx hardhat run scripts/deploy.js --network mumbai",
    "verify": "npx hardhat verify --network mumbai 0x27dbdc719DA73f68de6bCDfE15505A45bdeB0378 2",
    "clear": "rmdir /q /s artifacts && rmdir /q /s cache",
    "test": "yarn clear && yarn compile && npx hardhat test"
  },
  "dependencies": {
    "dotenv": "^16.0.0"
  }
}
